<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="8dp" >

    <!-- Thumbnail Image -->
    <ImageView
        android:id="@+id/shows_list_thumbnail_imageview"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp" />

    <!-- Movie Title -->
    <TextView
        android:id="@+id/shows_list_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/shows_list_thumbnail_imageview"
        android:layout_toRightOf="@id/shows_list_thumbnail_imageview"
        android:textSize="16sp"
        android:textColor="@color/main_color_100"
        android:textStyle="bold" />

    <!-- Movie subtitle -->
    <TextView
        android:id="@+id/shows_list_subtitle_textview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shows_list_title_textview"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/shows_list_thumbnail_imageview"
        android:textColor="@color/main_color_600"
        android:textSize="14sp" />

</RelativeLayout>