<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/main_color_100"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/custom_actionbar_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:singleLine="true"
            android:text="hotstar"
            android:textColor="@color/main_color_900"
            fontPath="fonts/GibsonCond-Bold.ttf"
            android:textSize="24sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/button_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical|left"
                android:background="@drawable/ic_chevron_left_white_24dp" />

            <ImageView
                android:id="@+id/button_menu"
                android:layout_width="30dp"
                android:fitsSystemWindows="true"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical|left"
                android:background="@drawable/ic_menu_white_24dp" />
        </FrameLayout>

        <com.todddavies.components.progressbar.ProgressWheel
            android:id="@+id/actionbar_pw_spinner"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="top|right"
            ProgressWheel:barColor="#86f066"
            ProgressWheel:barLength="10dp"
            ProgressWheel:barWidth="1dp"
            ProgressWheel:rimColor="@color/main_color_900"
            android:visibility="gone"
            ProgressWheel:rimWidth="2dp"
            ProgressWheel:textColor="@color/main_color_900"
            ProgressWheel:textSize="15sp" />

        <TextView
            android:id="@+id/actionbar_pw_mins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:layout_marginTop="27dp"
            android:text="mins"
            android:visibility="gone"
            android:textColor="@color/main_color_900"
            android:textSize="10sp"/>

    </FrameLayout>
</RelativeLayout>