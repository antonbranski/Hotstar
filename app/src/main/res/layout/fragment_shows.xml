<LinearLayout android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:id="@+id/shows_main_layout">
        <com.daimajia.slider.library.SliderLayout
            android:id="@+id/shows_main_slider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/main_color_300"
            android:text="150 min"/>
        <RelativeLayout
            style="@style/SectionTailLayout">
            <Button
                android:id="@+id/shows_main_browse_button"
                style="@style/SectionTailButton"
                />
            <TextView
                android:id="@+id/shows_main_browse_textview"
                style="@style/SectionTailTextView"/>
            <ImageView
                android:id="@+id/shows_main_browse_iconview"
                style="@style/SectionTailImageView"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:id="@+id/shows_hindi_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                style="@style/SectionHeadLayout">
                <TextView
                    style="@style/SectionHeadView"
                    android:text="Hindi"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.daimajia.slider.library.SliderLayout
                    android:id="@+id/shows_hindi_slider"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/main_color_300"
                    android:text="21 min"/>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:visibility="gone"
            style="@style/SectionTailLayout">
            <Button
                android:id="@+id/shows_hindi_browse_button"
                style="@style/SectionTailButton"
                />
            <TextView
                android:id="@+id/shows_hindi_browse_textview"
                style="@style/SectionTailTextView"/>
            <ImageView
                android:id="@+id/shows_hindi_browse_iconview"
                style="@style/SectionTailImageView"/>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
